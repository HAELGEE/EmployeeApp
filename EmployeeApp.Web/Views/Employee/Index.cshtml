@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using EmployeeApp.Web.Models
@model Employee[]

<!DOCTYPE html>
<html>
<head>
    <title>Alla Anställda</title>
    <link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@@latest/css/pico.classless.min.css">
</head>
<body style="margin: 2rem;">
    <h1>Anställda:</h1>
    <ul>
        @foreach (var employ in Model)
        {
            <li>

                <a asp-controller="Employee" asp-action="Info" asp-route-employeeId="@employ.Id">@employ.Name</a>

            </li>
        }
    </ul>

    <a asp-controller="Employee" asp-action="create">Skapa användare</a>

</body>
</html>